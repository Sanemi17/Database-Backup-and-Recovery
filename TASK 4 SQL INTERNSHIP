-- TASK 4: BACKUP AND RECOVERY
----------------------------

-- Backup database
BACKUP DATABASE INTERNSHIP
TO DISK = 'C:\\Users\\Lenevo\\Documents\\SQLBackups\\INTERNSHIP.bak'
WITH FORMAT, INIT, NAME = 'INTERNSHIP';
-- Restore database
RESTORE DATABASE INTERNSHIP
FROM DISK = 'D:\Backups\INTERNSHIP.bak'
WITH REPLACE;

BACKUP DATABASE INTERNSHIP
TO DISK = 'C:\\BackupSQL\\INTERNSHIP.bak'
WITH FORMAT, INIT, NAME = 'INTERNSHIP';
